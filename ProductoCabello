public class ProductoCabello {
    private String nombre;
    private String tipo;

    public ProductoCabello(String nombre, String tipo) {
        this.nombre = nombre;
        this.tipo = tipo;
    }

    public String getNombre() {
        return nombre;
    }

    public String getTipo() {
        return tipo;
    }

    public void aplicar(Cabello cabello) {
        System.out.println("Aplicando " + nombre + " de tipo " + tipo + " al cabello.");
    }
}
